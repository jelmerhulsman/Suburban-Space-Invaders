    <screen id="start" controller="mygame.GameGUI">
        <layer id="layer" childLayout="center">
            <panel id="panel" height="25%" width="35%" align="center" valign="center" backgroundColor="#f60f" childLayout="center" visibleToMouse="true">
                <interact onClick="startGame()"/>
                <text id="text" font="Interface/Fonts/Default.fnt" color="#000f" text="Start Game!" align="center" valign="center" />
            </panel>
        </layer>
    </screen>
</nifty>
