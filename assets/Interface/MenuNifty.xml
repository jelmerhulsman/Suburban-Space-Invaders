<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useControls filename="nifty-default-controls.xml"/> 
    <useStyles filename="nifty-default-styles.xml"/> 
    <screen id="start" controller="mygame.MenuState">
        <layer id="foreground" childLayout="vertical" backgroundColor="#FFFFFF">
            <panel id="panel_top" height="75%" width="25%" align="center" childLayout="center">
                <image filename="Textures/logo.png" align="center">
                </image>  
            </panel>
            <panel id="panel_mid" height="25%" width="100%" align="center" childLayout="center">  
                <control name="button" id="startbutton" height="25%" width="25%" valign="center" childLayout="center"  visisbleToMouse="true" label="Start">
                    <interact onClick="startGame()"/> 
                </control>
                    <image filename="Textures/NHLlogo.jpg" align="right">
                </image>  
            </panel>
        </layer>
    </screen>
</nifty>
